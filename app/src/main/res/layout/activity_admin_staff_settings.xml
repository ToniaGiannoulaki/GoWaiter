<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        tools:context=".Admin.Admin_Account_Settings">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="390dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Add Employee"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/imageButton_add_employee"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="111dp"
                android:background="@color/white"
                android:contentDescription="Add Employee"
                app:srcCompat="@drawable/add_employee_button" />

            <TextView
                android:id="@+id/textView_add_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="Add Employee"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_enter_employees_email"
                android:layout_width="298dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="281dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/email_icon_purple"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter employee's email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView_profile_picture_description"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:text="To add an employee, please enter their email address in the designated field and select their profession. An invitation will then be automatically sent to the employee's inbox."
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/imageView_profile_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"/>

            <Spinner
                android:id="@+id/spinner_select_role_add"
                android:layout_width="298dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="250dp"
                android:background="@drawable/custom_input"
                android:paddingStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="370dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Delete Employee"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/editText_employees_email"
                android:layout_width="298dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="165dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="281dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/email_icon_purple"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter employee's email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_delete_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="Delete Employee"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_employees_username"
                android:layout_width="298dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="378dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_delete_employee_description"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="154dp"
                android:text="To delete an employee, fill the designated fields." />

            <Spinner
                android:id="@+id/spinner_select_role_delete"
                android:layout_width="298dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="250dp"
                android:background="@drawable/custom_input"
                android:paddingStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:id="@+id/imageButton_delete_employee"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="111dp"
                android:background="@color/white"
                android:contentDescription="Delete employee"
                app:srcCompat="@drawable/delete_employee_button" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
