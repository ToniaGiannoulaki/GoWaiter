<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background2"
    tools:context=".Waiter.Waiter_toolbar_category">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Section -->
            <TextView
                android:id="@+id/selected_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_category"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/selected_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/category_name"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_the_items_and_once_you_are_done_click_on_the_button_add_item"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <!-- CardView for each item -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Item Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Green Tea"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- Quantity -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/et_quantity"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1" />

                        <!-- Price -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3,80€"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="8dp" />

                        <!-- Add Button -->
                        <Button
                            android:id="@+id/btn_add_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add item"
                            android:backgroundTint="#C835ED"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second CardView (Mountain Tea) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Item Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mountain Tea"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- Quantity -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/et_quantity_mountain"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@android:drawable/edit_text"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="2" />

                        <!-- Price -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4,90€"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="8dp" />

                        <!-- Add Button -->
                        <Button
                            android:id="@+id/btn_add_mountain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add item"
                            android:backgroundTint="#C835ED"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add additional CardViews for other items as needed -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
