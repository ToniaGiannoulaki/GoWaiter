<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaristaBarman.Barista_Barman_Account">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background_view"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginLeft="@dimen/card_view_margin_horizontal"
        android:layout_marginRight="@dimen/card_view_margin_horizontal"
        android:layout_marginTop="@dimen/card_view_margin_top"
        android:layout_below="@id/top_view" />

    <!-- First CardView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_orders_barista_barman"
        android:layout_width="@dimen/card_view_size"
        android:layout_height="@dimen/card_view_size"
        android:layout_below="@id/top_view"
        android:layout_marginStart="@dimen/card_view_margin_start"
        android:layout_columnWeight="1"
        android:layout_marginTop="@dimen/card_view_margin_top"
        android:layout_row="1"
        android:layout_column="0"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_orders_barista_barman"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/change_order_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Orders"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textView_order_barista_barman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orders"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Second CardView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_drink_beverage_recipes"
        android:layout_width="@dimen/card_view_size"
        android:layout_height="@dimen/card_view_size"
        android:layout_below="@id/top_view"
        android:layout_toRightOf="@id/card_view_orders_barista_barman"
        android:layout_marginLeft="@dimen/card_view_margin_horizontal"
        android:layout_marginTop="@dimen/card_view_margin_top"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_drink_beverage_recipes"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/drink_beverage_recipes_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Drink and Beverage Recipes"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textView_daily_tasks_barista_barman"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/drink_beverage_recipes"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Third CardView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_statistics_barista_barman"
        android:layout_width="@dimen/card_view_size"
        android:layout_height="@dimen/card_view_size"
        android:layout_marginStart="@dimen/card_view_margin_start"
        android:layout_below="@id/card_view_orders_barista_barman"
        android:layout_marginLeft="@dimen/card_margin_left_enterprise_settings"
        android:layout_marginTop="@dimen/card_margin_top_enterprise_settings"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_statistics_barista_barman"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/statistics_chart_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Statistics"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textView_statistics_barista_barman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Fourth CardView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_training_support_barista_barman"
        android:layout_width="@dimen/card_view_size"
        android:layout_height="@dimen/card_view_size"
        android:layout_below="@id/card_view_drink_beverage_recipes"
        android:layout_marginStart="@dimen/card_view_margin_start_2nd_column"
        android:layout_marginLeft="@dimen/card_view_messages_margin_left"
        android:layout_marginTop="@dimen/card_view_messages_margin_top"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_training_support_barista_barman"
                android:layout_width="@dimen/messages_image_size"
                android:layout_height="@dimen/messages_image_size"
                android:src="@drawable/training_and_support_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/training_amp_support"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textView_training_support_barista_barman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/training_amp_support"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/messages_text_size"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Fifth CardView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_supplies_barista_barman"
        android:layout_width="@dimen/card_view_size"
        android:layout_height="@dimen/card_view_size"
        android:layout_below="@id/card_view_statistics_barista_barman"
        android:layout_marginLeft="@dimen/cardview_supplies_margin_left"
        android:layout_marginTop="@dimen/cardview_supplies_margin_top"
        android:layout_marginStart="@dimen/card_view_margin_start"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_supplies_barista_barman"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/shopping_cart_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Supplies"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textView_supplies_barista_barman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supplies"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/messages_text_size"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Sixth CardView -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_account_settings_barista_barman"
        android:layout_width="@dimen/card_view_size"
        android:layout_height="@dimen/card_view_size"
        android:layout_below="@id/card_view_training_support_barista_barman"
        android:layout_marginLeft="210dp"
        android:layout_marginStart="@dimen/card_view_margin_start_2nd_column"
        android:layout_marginTop="@dimen/cardview_supplies_margin_top"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_account_settings_barista_barman"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/account_settings_icon"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Account Settings"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textView_account_settings_barista_barman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_nsettings"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/messages_text_size"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/welcome_text_size"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Barman/Barista"
        android:textColor="@color/white"
        android:textSize="@dimen/welcome_text_size"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="35dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_profile_pic"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="55dp"
        android:contentDescription="Profile Picture"
        android:src="@drawable/profile_pic_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <TextView
        android:id="@+id/textView_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_profile_pic"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="235dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/log_out"
        android:textColor="@color/white"
        android:textSize="@dimen/log_out_text_size" />

</RelativeLayout>