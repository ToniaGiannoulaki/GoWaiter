<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="@dimen/imageView_get_started_width"
        android:layout_height="@dimen/imageView_get_started_height"
        android:layout_marginStart="77dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="413dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/button_get_started"
        android:layout_width="@dimen/image_button_get_started_button_width"
        android:layout_height="@dimen/image_button_get_started_button_height"
        android:layout_marginStart="88dp"
        android:layout_marginTop="@dimen/image_button_get_started_margin_top"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/get_started_background"
        android:textColor="@color/get_started_text"
        android:text="@string/get_started"
        android:layout_centerInParent="true"
        android:textSize="@dimen/button_get_started_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_GoWaiter"
        android:layout_width="@dimen/get_started_text_view_gr"
        android:layout_height="115dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="228dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/welcome_to_n_gowaiter"
        android:textColor="@color/white"
        android:textSize="@dimen/image_button_get_started_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>